  }
}

/* ==================== å‡å°‘åŠ¨ç”»æ¨¡å¼æ”¯æŒ ==================== */
@media (prefers-reduced-motion: reduce) {
  .search-card,
  .filter-card,
  .search-input,
  .clear-search-btn,
  .search-submit-btn,
  .search-status,
  .filter-info {
    transition: none;
  }
  /* ğŸ¯ [CSS-REFACTOR] ç§»é™¤.filter-select - å·²è¿ç§»åˆ°æƒå¨æ–‡ä»¶ */

  .search-card::before,
  .filter-card::before,
  .search-status::before,
  .filter-info::before,
  .search-input:focus::before {
    display: none;
  }

  .card-icon {
    animation: none;
  }

  .card-badge {
    animation: none;
  }

  .badge-dot {
    animation: none;
  }

  /* ğŸ¯ [CSS-REFACTOR] ç§»é™¤.filter-select:focus - å·²è¿ç§»åˆ°æƒå¨æ–‡ä»¶ */

  .card-content {
    animation: none;
  }
}