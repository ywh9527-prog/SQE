/* ============================================
   5. 适配现有加载与空状态类名 (Phase 7)
   ============================================ */

/* 适配 .details-loading */
.details-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    padding: 3rem !important;
    gap: 1rem;
    color: var(--gray-600);
}

/* 使用伪元素创建加载动画 */
.details-loading::before {
    content: '';
    width: 40px;
    height: 40px;
    border: 3px solid var(--gray-200);
    border-top: 3px solid var(--primary-500);
    border-radius: 50%;
    animation: smooth-spin 1s cubic-bezier(0.68, -0.55, 0.27, 1.55) infinite;
}

/* 适配 .no-documents-hint */
.no-documents-hint {
    display: flex;
    flex-direction: column;
    align-items: center;
    padding: 3rem 2rem !important;
    background: var(--gray-50);
    border-radius: 12px;
    border: 2px dashed var(--gray-200);
    margin: 1rem 0;
    transition: all 0.3s ease;
}

.no-documents-hint:hover {
    border-color: var(--primary-400);
    background: rgba(157, 122, 84, 0.05);
}

.no-documents-hint .hint-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    opacity: 0.5;
    animation: float 3s ease-in-out infinite;
}

@keyframes float {

    0%,
    100% {
        transform: translateY(0);
    }

    50% {
        transform: translateY(-10px);
    }
}

.no-documents-hint .hint-text {
    color: var(--gray-600);
    font-weight: 500;
}